<form method="post" action="/users/signon">
  <p>Enter a new Username and Password:</p>
  <div>
    <label for="username">Username:
      <input name="username" id="username" value="<%= @username %>"/>
    </label>
  </div>
  <div>
    <label class="inline" for="password">Password
      <input name="password" id="password"/>
    </label>
  </div>
  <button type="submit">Register</button>
</form>

<section id="todos">
<form action="/lists/<%= params[:index] %>/delete" method="post">
  <input type="hidden" name="_method" value="delete"> <!-- Hidden input to simulate DELETE method -->
  <button type="submit" class="todos">Delete List</button> <!-- Delete button -->
</form>
</section>

<form action="/lists/<%=params[:index]%>" method="post">

  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:index] %>">Cancel</a>
  </fieldset>
</form>

<ul id="lists">
  <% @lists.each_with_index do |list, list_index| %>
    <li>
      <a href="/lists/<%=list_index%>">
        <h2><%= list[:name] %></h2>
        <p><%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="/lists/new">New List</a>
<% end %>

